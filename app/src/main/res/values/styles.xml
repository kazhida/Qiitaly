<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bg_actionbar</item>
    </style>

    <style name="CustomTitlePageIndicator">
        <item name="android:background">@color/bg_indicator</item>
        <item name="footerColor">@color/qiita_green</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#99333333</item>
        <item name="selectedColor">#333333</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="CaptionLabel">
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ItemDescription">
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="TagCaption">
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">@drawable/bg_tag</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
</resources>
