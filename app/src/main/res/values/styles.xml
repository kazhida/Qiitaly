<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTitlePageIndicator</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bg_actionbar</item>
    </style>

    <style name="CustomTitlePageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@color/bg_indicator</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/off_black</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="CaptionLabel">
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ItemDescription">
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#333333</item>
    </style>
</resources>
